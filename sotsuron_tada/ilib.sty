  \@ifundefined{#1@font}%
   {\@latexerr{name '#1@font' undefined}\@eha}%
   {\csname #1@font\endcsname}%
}

\def\ptconv#1{%
\ifnum #1 = 5
      \vpt\@vpt
\else \ifnum #1 = 6
      \vipt\@vipt
\else \ifnum #1 = 7
      \viipt\@viipt
\else \ifnum #1 = 8
      \viiipt\@viiipt
\else \ifnum #1 = 9
      \ixpt\@ixpt
\else \ifnum #1 = 10
      \xpt\@xpt
\else \ifnum #1 = 11
      \xipt\@xipt
\else \ifnum #1 = 12
      \xiipt\@xiipt
\else \ifnum #1 = 14
      \xivpt\@xivpt
\else \ifnum #1 = 17
      \xviipt\@xviipt
\else \ifnum #1 = 20
      \xxpt\@xxpt
\else \ifnum #1 = 25
      \xxvpt\@xxvpt
\else
      \@latexerr{wrong pt-size in \string\ptsize}\@eha%
\fi \fi \fi \fi \fi \fi \fi \fi \fi \fi \fi \fi
}


