  \fi
  \hs=\kanjiskip
  \advance\hs by \zwd
  \@ifundefined{#3}{\@latexerr{name '#3' undefined}\@eha}%
    {\csname #3\endcsname}%
  \@ifundefined{#4}{\@latexerr{name '#4' undefined}\@eha}%
    {\csname #4\endcsname}%
  }%}%
% {\if@debug\@latexerr{name '#1' already used}\@eha\fi}%
}

